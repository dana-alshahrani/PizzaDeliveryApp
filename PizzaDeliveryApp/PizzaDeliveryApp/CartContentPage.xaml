<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PizzaDeliveryApp"
             x:Class="PizzaDeliveryApp.CartContentPage">

    <ContentPage.Content>
        <StackLayout BackgroundColor="Beige">

            <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />


                </Grid.RowDefinitions>

            <!-- Product 1 -->
                <Frame Grid.ColumnSpan="2" Grid.Row="0" CornerRadius="10" BorderColor="LightGray" BackgroundColor="White" BindingContext="{Binding Pizza1}" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                        <Image Source="pizza1" Grid.Column="0" Aspect="AspectFit"/>

                        <StackLayout Grid.Column="1" >
                        <Label Text="Pepperoni Pizza" FontSize="Small" FontAttributes="Bold" />
                        <Label Text="Classic pepperoni pizza" FontSize="Small" />
                        <Label Text="$10.99" FontSize="Medium" FontAttributes="Bold" />
                    </StackLayout>
                </Grid>
            </Frame>

            <!-- Product 2 -->
                <Frame Grid.ColumnSpan="2" Grid.Row="1" CornerRadius="10" BorderColor="LightGray" BackgroundColor="White" BindingContext="{Binding Pizza2}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                        <Image Source="pizza2" Grid.Column="0" Aspect="AspectFit"/>


                        <StackLayout Grid.Column="1" >
                        <Label Text="Margherita Pizza" FontSize="Small" FontAttributes="Bold" />
                        <Label Text="Simple and delicious" FontSize="Small" />
                        <Label Text="$12.99" FontSize="Medium" FontAttributes="Bold" />
                    </StackLayout>
                </Grid>
            </Frame>

                <Label Grid.Row="2" Grid.Column="0" Text="Total" FontSize="Large" HorizontalOptions="Center" />
                <Label Grid.Row="2" Grid.Column="1" Text="$23.98" FontSize="Large" HorizontalOptions="Center" />

                <Button Grid.Row="3" Grid.ColumnSpan="2" BackgroundColor="DarkOrange" Text="Checkout" Clicked="OnCheckoutButtonClicked" HorizontalOptions="Center" />
        </Grid>

            
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
